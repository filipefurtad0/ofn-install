#!/usr/bin/env bash
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"
make -s -f "${DIR}/../docker/cli/Makefile"
set -e

export HOST_USER="$(id -u)"
export HOST_GROUP="$(id -g)"
export HOST_HOME=$HOME
export HOST_PWD=$PWD

docker run \
       --hostname ofn-install \
       -ti \
       --user 'root' \
       --volume "${DIR}/..:/opt/ofn-install/" \
       --volume "/:/host_root" \
       --volume "${HOST_HOME}:/host_home" \
       --entrypoint /opt/ofn-install/bin/cli_wrapper \
       --detach-keys="ctrl-h,ctrl-q" \
       ${DOCKER_EXTRA_OPTS} \
       -e HOST_USER \
       -e HOST_GROUP \
       -e HOST_HOME \
       -e HOST_PWD \
       -e DIGITALOCEAN_TOKEN \
       -e AWS_ACCESS_KEY_ID \
       -e AWS_SECRET_ACCESS_KEY \
       --rm ofn/cli-base:latest "$@"
